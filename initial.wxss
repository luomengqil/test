/* 项目初始化样式表 */

page{
  background-color: #f6f6f6;
  color: #707070;
  font-family: SimHei , 'Microsoft JhengHei' , 'Microsoft Yahei';
  font-size: 30rpx;
}

page button{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 ;
  font-family: SimHei , 'Microsoft JhengHei' , 'Microsoft Yahei';
  font-size: 30rpx ;
  font-weight: 400 ;
  color: #fff;
}

page .button-hover{
  background-color: #dedede;
}

view,input{
  box-sizing:border-box;
}

input{
  display: inline-block;
  padding-left: 1em;
}

.input-placeholder{
  color: #c3c3c3;
  font-size: 28rpx;
  font-family: SimHei , 'Microsoft JhengHei' , 'Microsoft Yahei';
}

navigator{
  display: inline-block;
}navigator:hover{
  color: #227CCC;
}


.clearfix:after {
  content : "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

