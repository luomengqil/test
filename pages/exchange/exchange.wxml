<!--pages/exchange/exchange.wxml-->

<form action="" bindsubmit="">
  <view class="input_box">
      <text>礼品券号</text> 
      <input name="ticket_id" type="text" placeholder="请输入礼品券号"/>
  </view>
  <view class="input_box">
      <text>收货人姓名</text> 
      <input name="name" type="text" placeholder="请输入收件人姓名"/>
  </view>
  <view class="input_box">
      <text>手机号码</text> 
      <input name="phone-number" type="number" placeholder="请输入手机号码"/>
  </view>
  <view class="input_box">
      <text>所在地区</text> 
      <input name="address" type="text" placeholder="省、市、区、街道"/>
      <image class="position" src="../../img/position2.png" mode="widthFix"></image>
  </view>
  <view class="textarea_box">
      <text>详细地址</text> 
      <textarea name="address_detail" placeholder="请输入详细地址" placeholder-class="input-placeholder"></textarea>
  </view>
  <view  class="confirm">
      <button class="click" form-type="submit">确认领取</button>
  </view>
</form>