/* pages/machineIncrease/machineIncrease.wxss */

.input_box,.textarea_box{
  display: flex;
  align-items: center;
  margin-top: 3rpx;
  padding: 30rpx 50rpx;
  background-color: #ffffff;
}

.textarea_box{
  align-items: flex-start;
  flex-direction: column;
}

.input_box text,.textarea_box text{
  width: 190rpx;
  color: #000;
}

.position{
  width: 50rpx;
}

.input_box input{
  padding-left: 0;
  flex: 1;
  width:300rpx;
  border: none;
  font-size: 30rpx;
}

textarea{
  margin-top: 10rpx;
  width:100%;
  height: 150rpx;
  font-size: 30rpx;
}

.confirm{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 40rpx;
  background-color: #ffffff;
}

.click{
  background-color: #425E91;
  width: 100%!important;
}

